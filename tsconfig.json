{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
